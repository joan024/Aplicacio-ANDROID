<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_nom_usuari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/usuari"/>

    <EditText
        android:id="@+id/et_puntuacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="puntuacio"/>
    <EditText
        android:id="@+id/et_comentari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escriu el teu comentari aquí"/>

    <Button
        android:id="@+id/btn_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar opinió"
        android:background="@drawable/esquines_rodones_orange"/>

</LinearLayout>
