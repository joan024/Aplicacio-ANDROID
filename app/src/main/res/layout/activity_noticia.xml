<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_noticia_foto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/news" />

        <!-- Flecha per tornar -->
        <ImageView
            android:id="@+id/iv_tornar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="8dp"
            android:src="@drawable/tornar"
            app:tint="@color/mandarina"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tv_titol_noticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_noticia_foto"
            android:padding="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="Noticia" />

        <TextView
            android:id="@+id/tv_data_publicacio"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_titol_noticia"
            android:layout_alignStart="@id/tv_data_publicacio"
            android:layout_alignEnd="@id/tv_data_publicacio"
            android:padding="8dp"
            android:text="Data PublicaciÃ³"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_descripcio_noticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_data_publicacio"
            android:padding="8dp"
            android:textSize="20sp"
            android:text="Donde ira la Descripcion de la Noticia" />




    </RelativeLayout>
</ScrollView>

