<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/descomptepaper">

    <TextView
        android:id="@+id/tv_codi"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="DN346DA234"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_descripcio"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="10% en totes les tapes i begudes alcoholiques amb gel i llimona"
        android:layout_marginStart="40dp"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_data_inici"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08/03/2023"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="18sp"
            android:paddingHorizontal="16dp" />

        <TextView
            android:id="@+id/tv_data_caducitat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10/10/2023"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_local_nom"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Primer local"
        android:layout_marginStart="40dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

</LinearLayout>

