<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_mensaje"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="409dp"
            android:layout_height="50dp"
            android:text="MENSAJE"
            android:background="#c3c3c3"
            android:textSize="25sp"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_correo"
                android:textColor="@color/mandarina"
                android:text="Enviar A : "
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/contacte_correo"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:hint="correu@correu.com" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_assumpte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assumpte : "
                android:textColor="@color/mandarina"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/contacta_assumpte"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:hint="Assumpte"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_mensaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minsatge : "
                android:textColor="@color/mandarina"
                android:textSize="20dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/contacta_correu"
            android:layout_width="390dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:hint="Comentari"
            android:inputType="textMultiLine"
            android:layout_marginTop="20dp"/>


        <Button
            android:id="@+id/btn_enviar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/esquines_rodones_orange"
            android:text="ENVIAR"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
