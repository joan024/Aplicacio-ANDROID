<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_mensaje"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="409dp"
            android:layout_height="50dp"
            android:text="MENSAJE"
            android:background="#c3c3c3"
            android:textSize="25sp"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_correo"
                android:textColor="@color/mandarina"
                android:text="@string/enviar_a"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/correu"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:text="@string/tappinges_gmail_com" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_assumpte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assumpte"
                android:textColor="@color/mandarina"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/titol"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:hint="@string/assumpte_"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_mensaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/misatge"
                android:textColor="@color/mandarina"
                android:textSize="20dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/missatge"
            android:layout_width="390dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:hint="@string/contingut"
            android:inputType="textMultiLine"
            android:layout_marginTop="20dp"/>


        <Button
            android:id="@+id/btn_enviar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/esquines_rodones_orange"
            android:text="@string/enviar"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
