<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Flecha per tornar -->
    <ImageView
        android:id="@+id/iv_tornar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:src="@drawable/tornar"
        app:tint="@color/mandarina"
        android:clickable="true"/>

    <!-- Vista de lista para mostrar los mensajes de chat -->
    <ListView
        android:id="@+id/chatListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/messageLayout"
        android:divider="@null"
        android:layout_below="@id/iv_tornar"
        android:dividerHeight="0dp" />

    <!-- Diseño para ingresar mensajes y enviarlos -->
    <RelativeLayout
        android:id="@+id/messageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:padding="16dp">

        <!-- Cuadro de texto para ingresar mensajes -->
        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/sendButton"
            android:hint="Escriu el teu misatge aqui"
            android:inputType="text" />

        <!-- Botón para enviar mensajes -->
        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/enviar" />

    </RelativeLayout>

</RelativeLayout>
